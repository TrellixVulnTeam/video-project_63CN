{% extends "layout.jinja2" %} 

{% block content%}
<div class="container">

    <h1>Create Video</h1>

    <form action="/create_video" method="post">

        <h3>Create Your video</h3>

        <p>Name</p>
        <input name="name" type="text">
        <p>Theme</p>
        <input name="theme" type="text">
        <br>
        <input name="form.post" type="submit" value="Create">
    </form>


    <h1>Videos List</h1>

    {% for entry in videos %}
    <div>
        <h3>Video</h3>
        <p>{{entry.name}}</p>
        <p>{{entry.theme}}</p>
        <p>{{entry.thumbs_up}}</p>
        <p>{{entry.thumbs_down}}</p>
        <form method="post">

            <input type="hidden" name="name" value={{entry.name}}>
            <input type="hidden" name="action" value="1">
            <input type="submit" value="Thumbs Up">
        </form>

        <form method="post">

            <input type="hidden" name="name" value={{entry.name}}>
            <input type="hidden" name="action" value="2">
            <input type="submit" value="Thumbs Down">
        </form>
    </div>

    {% endfor %}
</div>
{% endblock content %}

